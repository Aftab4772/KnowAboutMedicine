<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KnowAboutMedicine.MainSearchWindow"
             Icon = "@drawable/mainIcon.png"
             Title="Know About Medicine">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="@drawable/aboutUs.png" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Entry x:Name="Enter_Medicine" Placeholder="Medicine Name" TextChanged="Enter_Medicine_TextChanged"/>
        </Grid>
        <ScrollView Grid.Row="1">
            <Grid x:Name="scrlGrid">
                
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>